

member
id(email)(pk), pass(nn), name(nn), id_number(주민등록번호 뒷자리 첫번째까지 -> 나이, 성별 자동 생성), reg_date, pay, grade

coupon
id(email)(pk), coupon_num, coupon_name(50%,100%)
 
taste 취향분석
id(email), genre(ani, thriller_horror, indi, romance_drama, action, sf, comedy), avg_rating, count_rating

rating 본 작품(평점)
id(email), num, title, genre, rating, review, ref_review, rev_review, seq_review, t_recommend

notice
num_n, title_n, date_n

vip_cinema_prev
num, title(kor), title(eng), year, country, age, genre, time, director, actor, story, video

vip_reservation 
id(email), seat_num, date, time, num

payment 결제
id(email), start_day, end_day

movie 영화
num, title(kor), title(eng), year, country, age (0/12/15/19), genre, time, director, actor, story, video

create table member(
id varchar(50),
pass varchar(30)  not null,
name varchar(20) not null,
id_num1 int not null,
id_num2 int not null,
pay int default 0,
grade char(10) default '준회원',
reg_date date,
constraint mb_name_uk unique(id),
constraint mb_id_pk primary key(id));          


create table vip_cinema_prev(
e_num int,
kor_title varchar2(60) not null,
eng_title varchar2(60) not null,
year int not null,
country varchar2(10) check(country in('한국','외국')),
age int not null,
genre varchar2(30) not null,
time int not null,
director varchar2(40) not null,
actor varchar2(100) not null,
stroy varchar2(3000) not null,
video varchar2(50) not null,
primary key(num));

create table movie(
num int,
kor_title varchar2(60) not null,
eng_title varchar2(60) not null,
year int not null,
country varchar2(10) check(country in('한국','외국')),
age int not null
,genre varchar2(30) not null,
time int not null,
director varchar2(40) not null,
actor varchar2(100) not null,
stroy varchar2(3000) not null,
video varchar2(50) not null,
primary key(num));
